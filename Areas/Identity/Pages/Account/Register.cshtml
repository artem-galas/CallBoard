@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
}

<section class="text-center">
    <form class="auth-form signup" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h1 class="h3 mb-3 font-weight-normal">Please Sign Up</h1>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email" class="sr-only"></label>
            <input asp-for="Input.Email" class="form-control" placeholder="Email address" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password" class="sr-only"></label>
            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword" class="sr-only"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirm Password" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
        </div>
        <div class="form-group">
            <div>Already have an account? Please <a asp-page="./Login">Sign In</a> </div>
        </div>
    </form>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
